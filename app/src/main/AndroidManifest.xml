<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_lili_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_lili_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lili.FullScreen"
        tools:targetApi="31">
        <activity
            android:name=".OlvideActivity"
            android:exported="false"
            android:label="@string/title_activity_olvide"
            android:theme="@style/Theme.Lili.FullScreen" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Lili.FullScreen" />
        <activity
            android:name=".DetalleActivity"
            android:exported="false"
            android:label="@string/title_activity_detalle"
            android:theme="@style/Theme.Lili.FullScreen" />
        <activity
            android:name=".RegistroActivity"
            android:exported="false"
            android:label="@string/title_activity_registro"
            android:theme="@style/Theme.Lili.FullScreen" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Lili.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lili.FullScreen" />
    </application>

</manifest>